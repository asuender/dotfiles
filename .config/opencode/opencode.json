{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto",
  },
  "permission": {
    "bash": {
      "*": "ask",
      "ls": "allow",
      "ls *": "allow",
      "pnpm*": "allow",
      "npm*": "allow",
      "uv *": "allow",
      "git pull*": "allow",
      "git fetch*": "allow",
      "git add*": "allow",
      "git commit*": "allow",
      "git branch*": "allow",
      "git push*": "allow",
      "git diff*": "allow",
      "git status*": "allow",
      "git log*": "allow",
      "git checkout*": "allow",
      "git stash*": "allow",
      "git switch*": "allow",
      "gh *": "allow"
    },
  },
  "model": "openai/gpt-5.1-codex",
}

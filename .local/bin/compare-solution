#!/usr/bin/env bash

# Let's keep this in case we need it later
# SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

my_solution_dir="$(pwd)/R"
progr_solution_dir="$(pwd)/R_solution"

if [[ ! -d $my_solution_dir ]]; then
  echo "Directory 'R' does not exist. Exiting."
  exit 1
fi

if [[ ! -d $progr_solution_dir ]]; then
  echo "Solution directory 'R_solution' does not exist. Exiting."
  exit 1
fi

selected_file="$(ls $my_solution_dir | fzf)"
if [[ $selected_file ]]; then
  nvim -O $my_solution_dir/$selected_file $progr_solution_dir/$selected_file --cmd 'set scb!'
fi

#!/usr/bin/env bash

journal_dir="$HOME/.journal"
today=$(date +"%d-%m-%Y")
note_file="$journal_dir/notes-$today.md"

# Ensure journal directory exists
mkdir -p "$journal_dir"

# Create note with template if it doesn't exist
if [[ ! -f "$note_file" ]]; then
  printf "# Notes for today (%s)\n\n" "$(date +"%d.%m.%Y")" > "$note_file"
fi

# Open in editor
"${EDITOR:-nvim}" "$note_file"
